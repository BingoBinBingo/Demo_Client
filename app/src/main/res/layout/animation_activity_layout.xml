<?xml version="1.0" encoding="utf-8"?>
<com.bingo.percentsamples.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bingo.percentsamples.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:background="#00ff00"
        android:orientation="horizontal">
        <Button
            android:id="@+id/alphaButton"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="100%"
            android:text="alpha"/>
        <Button
            android:id="@+id/scaleButton"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="100%"
            android:text="scale"/>
        <Button
            android:id="@+id/rotateButton"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="100%"
            android:text="rolate"/>
        <Button
            android:id="@+id/transButton"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="100%"
            android:text="trans"/>
        <Button
            android:alpha="255"
            android:background="@drawable/icon_lan_jie"
            android:id="@+id/allAnimaButton"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="100%"
            android:text="allAnimaButton"/>

    </com.bingo.percentsamples.PercentLinearLayout>

    <com.bingo.percentsamples.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="50%"
        android:background="#dd00ff">

        <TextView
            android:text="被操作的tv"
            android:id="@+id/animatedTv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="40%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginTopPercent="10%"
            android:background="#cdcdcd"/>

    </com.bingo.percentsamples.PercentLinearLayout>

</com.bingo.percentsamples.PercentLinearLayout>