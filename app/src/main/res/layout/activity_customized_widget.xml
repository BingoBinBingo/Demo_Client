<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:svp="http://schemas.android.com/apk/res/com.example.bingo.demo_client"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.bingo.demo_client.activity.CustomizedWidgetActivity">
        <com.example.bingo.demo_client.view.svp3300.widget.IPInfoView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            svp:infoName="IP"
            />

        <com.example.bingo.demo_client.view.svp3300.widget.IPInfoView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            svp:infoName="NetMask"
            />
        <com.example.bingo.demo_client.view.svp3300.widget.IPInfoView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            svp:infoName="GateWay"
            />
        <com.example.bingo.demo_client.view.svp3300.widget.IPInfoView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            svp:infoName="DNS1"
            />
        <com.example.bingo.demo_client.view.svp3300.widget.IPInfoView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            svp:infoName="DNS2"
            />
        <com.example.bingo.demo_client.view.svp3300.widget.TitleSpinner
            android:id="@+id/textSizeSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_widthPercent="20%w"
            svp:spinnerTitle="字体大小"
            svp:titleTvVisibility="visible"
            svp:valueTvPosition="alignParentRight"
            />

        <!--  Shape Button -->
        <Button
            android:id="@+id/shapeBtn"
            android:text="TestshapeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/test_shape_btn_selector"
            android:onClick="showInfo"
            />

        <com.example.bingo.demo_client.view.svp3300.widget.TitleNextLevelView
            android:id="@+id/timeNextLevelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            svp:nextLevelTitle="时区"
            svp:nextLevelValue="北京"
            svp:valueTvVisibility="visible"
            android:clickable="true"
            />

</com.zhy.android.percent.support.PercentLinearLayout>
